---
import type { MarkdownLayoutProps } from "astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Layout from "./Layout.astro";
import { SITE } from "@/config";

type Props = MarkdownLayoutProps<{ title: string }>;

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.title} | ${SITE.title}`}>
  <Header />
  <Breadcrumb />
  <main id="main-content" class="app-layout">
    <section id="about" class="app-prose mb-28 max-w-app prose-img:border-0 about-table">
      <h1 class="text-2xl tracking-wider sm:text-3xl">{frontmatter.title}</h1>
      <slot />
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .about-table :global(table) {
    border-collapse: collapse;
    border: none;
    width: 100%;
    table-layout: fixed;
  }
  .about-table :global(th),
  .about-table :global(td) {
    border: none;
    border-bottom: 1px solid var(--border);
    padding: 0.75rem 1.5rem 0.75rem 0;
    vertical-align: top;
    word-break: keep-all;
  }
  .about-table :global(th:last-child),
  .about-table :global(td:last-child) {
    padding-right: 0;
  }
  .about-table :global(thead th) {
    border-bottom: 2px solid var(--border);
    white-space: nowrap;
  }
  .about-table :global(tr:last-child td) {
    border-bottom: none;
  }
  /* 참여 프로젝트 표: 기간 | 고객사 | 프로젝트 | 구분 */
  .about-table :global(table:has(th:nth-child(4))) :global(th:nth-child(1)),
  .about-table :global(table:has(th:nth-child(4))) :global(td:nth-child(1)) {
    width: 20%;
    white-space: nowrap;
  }
  .about-table :global(table:has(th:nth-child(4))) :global(th:nth-child(2)),
  .about-table :global(table:has(th:nth-child(4))) :global(td:nth-child(2)) {
    width: 18%;
  }
  .about-table :global(table:has(th:nth-child(4))) :global(th:nth-child(3)),
  .about-table :global(table:has(th:nth-child(4))) :global(td:nth-child(3)) {
    width: 47%;
  }
  .about-table :global(table:has(th:nth-child(4))) :global(th:nth-child(4)),
  .about-table :global(table:has(th:nth-child(4))) :global(td:nth-child(4)) {
    width: 15%;
    white-space: nowrap;
  }
  /* 3컬럼 표: 기간 | 회사/고객사 | 담당 업무/프로젝트 */
  .about-table :global(table:has(th:nth-child(3)):not(:has(th:nth-child(4)))) :global(th:nth-child(1)),
  .about-table :global(table:has(th:nth-child(3)):not(:has(th:nth-child(4)))) :global(td:nth-child(1)) {
    width: 18%;
    white-space: nowrap;
  }
  .about-table :global(table:has(th:nth-child(3)):not(:has(th:nth-child(4)))) :global(th:nth-child(2)),
  .about-table :global(table:has(th:nth-child(3)):not(:has(th:nth-child(4)))) :global(td:nth-child(2)) {
    width: 22%;
  }
  .about-table :global(table:has(th:nth-child(3)):not(:has(th:nth-child(4)))) :global(th:nth-child(3)),
  .about-table :global(table:has(th:nth-child(3)):not(:has(th:nth-child(4)))) :global(td:nth-child(3)) {
    width: 60%;
  }
  /* 2컬럼 표: 프로젝트 | 설명 */
  .about-table :global(table:has(th:nth-child(2)):not(:has(th:nth-child(3)))) :global(th:nth-child(1)),
  .about-table :global(table:has(th:nth-child(2)):not(:has(th:nth-child(3)))) :global(td:nth-child(1)) {
    width: 30%;
  }
  .about-table :global(table:has(th:nth-child(2)):not(:has(th:nth-child(3)))) :global(th:nth-child(2)),
  .about-table :global(table:has(th:nth-child(2)):not(:has(th:nth-child(3)))) :global(td:nth-child(2)) {
    width: 70%;
  }
  /* 모바일 대응 */
  @media (max-width: 768px) {
    .about-table :global(table) {
      display: block;
      overflow-x: auto;
      white-space: nowrap;
    }
    .about-table :global(th),
    .about-table :global(td) {
      padding: 0.5rem 0.75rem;
      font-size: 0.875rem;
    }
  }
</style>
